<?xml version="1.0" encoding="ISO-8859-1"?>
<project name="module_testreportparserpluginserver" default="compile.module.testreportparserpluginserver">
    <dirname property="module.testreportparserpluginserver.basedir"
             file="${ant.file.module_testreportparserpluginserver}"/>


    <property name="compiler.args.testreportparserpluginserver" value="${compiler.args}"/>

    <property name="testreportparserpluginserver.output.dir"
              value="${module.testreportparserpluginserver.basedir}/../out/production/TestReportParserPluginServer"/>
    <property name="testreportparserpluginserver.testoutput.dir"
              value="${module.testreportparserpluginserver.basedir}/../out/test/TestReportParserPluginServer"/>

    <path id="testreportparserpluginserver.module.bootclasspath">
        <!-- Paths to be included in compilation bootclasspath -->
    </path>

    <path id="testreportparserpluginserver.module.classpath">
        <path refid="library.teamcity_openapi.classpath"/>
        <path refid="library.teamcity_utils.classpath"/>
    </path>

    <path id="testreportparserpluginserver.runtime.module.classpath">
        <pathelement location="${testreportparserpluginserver.output.dir}"/>
        <pathelement location="${testreportparserpluginserver.testoutput.dir}"/>
        <path refid="library.teamcity_openapi.classpath"/>
        <path refid="library.teamcity_utils.classpath"/>
    </path>


    <patternset id="excluded.from.module.testreportparserpluginserver">
        <patternset refid="ignored.files"/>
    </patternset>

    <patternset id="excluded.from.compilation.testreportparserpluginserver">
        <patternset refid="excluded.from.module.testreportparserpluginserver"/>
    </patternset>

    <path id="testreportparserpluginserver.module.sourcepath">
        <dirset dir="${module.testreportparserpluginserver.basedir}">
            <include name="resources"/>
            <include name="src"/>
        </dirset>
    </path>


    <target name="compile.module.testreportparserpluginserver"
            depends="compile.module.testreportparserpluginserver.production,compile.module.testreportparserpluginserver.tests"
            description="Compile module TestReportParserPluginServer"/>

    <target name="compile.module.testreportparserpluginserver.production"
            description="Compile module TestReportParserPluginServer; production classes">
        <mkdir dir="${testreportparserpluginserver.output.dir}"/>
        <javac destdir="${testreportparserpluginserver.output.dir}" debug="${compiler.debug}"
               nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true">
            <compilerarg line="${compiler.args.testreportparserpluginserver}"/>
            <bootclasspath refid="testreportparserpluginserver.module.bootclasspath"/>
            <classpath refid="testreportparserpluginserver.module.classpath"/>
            <src refid="testreportparserpluginserver.module.sourcepath"/>
            <patternset refid="excluded.from.compilation.testreportparserpluginserver"/>
        </javac>

        <copy todir="${testreportparserpluginserver.output.dir}">
            <fileset dir="${module.testreportparserpluginserver.basedir}/resources">
                <patternset refid="compiler.resources"/>
                <type type="file"/>
            </fileset>
            <fileset dir="${module.testreportparserpluginserver.basedir}/src">
                <patternset refid="compiler.resources"/>
                <type type="file"/>
            </fileset>
        </copy>
    </target>

    <target name="compile.module.testreportparserpluginserver.tests"
            depends="compile.module.testreportparserpluginserver.production"
            description="compile module TestReportParserPluginServer; test classes" unless="skip.tests"/>

    <target name="clean.module.testreportparserpluginserver" description="cleanup module">
        <delete dir="${testreportparserpluginserver.output.dir}"/>
        <delete dir="${testreportparserpluginserver.testoutput.dir}"/>
    </target>
</project>