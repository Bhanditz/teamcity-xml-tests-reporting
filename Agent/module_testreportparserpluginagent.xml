<?xml version="1.0" encoding="ISO-8859-1"?>
<project name="module_testreportparserpluginagent" default="compile.module.testreportparserpluginagent">
    <dirname property="module.testreportparserpluginagent.basedir"
             file="${ant.file.module_testreportparserpluginagent}"/>


    <property name="compiler.args.testreportparserpluginagent" value="${compiler.args}"/>

    <property name="testreportparserpluginagent.output.dir"
              value="${module.testreportparserpluginagent.basedir}/../out/production/TestReportParserPluginAgent"/>
    <property name="testreportparserpluginagent.testoutput.dir"
              value="${module.testreportparserpluginagent.basedir}/../out/test/TestReportParserPluginAgent"/>

    <path id="testreportparserpluginagent.module.bootclasspath">
        <!-- Paths to be included in compilation bootclasspath -->
    </path>

    <path id="testreportparserpluginagent.module.classpath">
        <pathelement location="${testreportparserplugincommon.output.dir}"/>
        <pathelement location="${testreportparserplugincommon.testoutput.dir}"/>
        <path refid="library.teamcity_api.classpath"/>
        <path refid="library.teamcity_openapi.classpath"/>
        <path refid="library.teamcity_utils.classpath"/>
    </path>

    <path id="testreportparserpluginagent.runtime.module.classpath">
        <pathelement location="${testreportparserpluginagent.output.dir}"/>
        <pathelement location="${testreportparserpluginagent.testoutput.dir}"/>
        <pathelement location="${testreportparserplugincommon.output.dir}"/>
        <pathelement location="${testreportparserplugincommon.testoutput.dir}"/>
        <path refid="library.teamcity_openapi.classpath"/>
        <path refid="library.teamcity_utils.classpath"/>
        <path refid="library.teamcity_api.classpath"/>
    </path>


    <patternset id="excluded.from.module.testreportparserpluginagent">
        <patternset refid="ignored.files"/>
    </patternset>

    <patternset id="excluded.from.compilation.testreportparserpluginagent">
        <patternset refid="excluded.from.module.testreportparserpluginagent"/>
    </patternset>

    <path id="testreportparserpluginagent.module.sourcepath">
        <dirset dir="${module.testreportparserpluginagent.basedir}">
            <include name="src"/>
        </dirset>
    </path>


    <target name="compile.module.testreportparserpluginagent"
            depends="compile.module.testreportparserpluginagent.production,compile.module.testreportparserpluginagent.tests"
            description="Compile module TestReportParserPluginAgent"/>

    <target name="compile.module.testreportparserpluginagent.production"
            depends="compile.module.testreportparserplugincommon"
            description="Compile module TestReportParserPluginAgent; production classes">
        <mkdir dir="${testreportparserpluginagent.output.dir}"/>
        <javac destdir="${testreportparserpluginagent.output.dir}" debug="${compiler.debug}"
               nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true">
            <compilerarg line="${compiler.args.testreportparserpluginagent}"/>
            <bootclasspath refid="testreportparserpluginagent.module.bootclasspath"/>
            <classpath refid="testreportparserpluginagent.module.classpath"/>
            <src refid="testreportparserpluginagent.module.sourcepath"/>
            <patternset refid="excluded.from.compilation.testreportparserpluginagent"/>
        </javac>

        <copy todir="${testreportparserpluginagent.output.dir}">
            <fileset dir="${module.testreportparserpluginagent.basedir}/src">
                <patternset refid="compiler.resources"/>
                <type type="file"/>
            </fileset>
        </copy>
    </target>

    <target name="compile.module.testreportparserpluginagent.tests"
            depends="compile.module.testreportparserpluginagent.production"
            description="compile module TestReportParserPluginAgent; test classes" unless="skip.tests"/>

    <target name="clean.module.testreportparserpluginagent" description="cleanup module">
        <delete dir="${testreportparserpluginagent.output.dir}"/>
        <delete dir="${testreportparserpluginagent.testoutput.dir}"/>
    </target>
</project>