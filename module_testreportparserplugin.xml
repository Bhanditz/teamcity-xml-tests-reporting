<?xml version="1.0" encoding="ISO-8859-1"?>
<project name="module_testreportparserplugin" default="compile.module.testreportparserplugin">
    <dirname property="module.testreportparserplugin.basedir" file="${ant.file.module_testreportparserplugin}"/>


    <property name="compiler.args.testreportparserplugin" value="${compiler.args}"/>

    <property name="testreportparserplugin.output.dir"
              value="${module.testreportparserplugin.basedir}/out/production/TestReportParserPlugin"/>
    <property name="testreportparserplugin.testoutput.dir"
              value="${module.testreportparserplugin.basedir}/out/test/TestReportParserPlugin"/>

    <path id="testreportparserplugin.module.bootclasspath">
        <!-- Paths to be included in compilation bootclasspath -->
    </path>

    <path id="testreportparserplugin.module.classpath">
        <pathelement location="${testreportparserpluginagent.output.dir}"/>
        <pathelement location="${testreportparserpluginagent.testoutput.dir}"/>
        <pathelement location="${testreportparserpluginserver.output.dir}"/>
        <pathelement location="${testreportparserpluginserver.testoutput.dir}"/>
        <pathelement location="${testreportparserplugintests.output.dir}"/>
        <pathelement location="${testreportparserplugintests.testoutput.dir}"/>
        <pathelement location="${testreportparserplugincommon.output.dir}"/>
        <pathelement location="${testreportparserplugincommon.testoutput.dir}"/>
    </path>

    <path id="testreportparserplugin.runtime.module.classpath">
        <pathelement location="${testreportparserplugin.output.dir}"/>
        <pathelement location="${testreportparserplugin.testoutput.dir}"/>
        <pathelement location="${testreportparserpluginagent.output.dir}"/>
        <pathelement location="${testreportparserpluginagent.testoutput.dir}"/>
        <pathelement location="${testreportparserplugincommon.output.dir}"/>
        <pathelement location="${testreportparserplugincommon.testoutput.dir}"/>
        <path refid="library.teamcity_openapi.classpath"/>
        <path refid="library.teamcity_utils.classpath"/>
        <path refid="library.teamcity_api.classpath"/>
        <pathelement location="${testreportparserpluginserver.output.dir}"/>
        <pathelement location="${testreportparserpluginserver.testoutput.dir}"/>
        <pathelement location="${testreportparserplugintests.output.dir}"/>
        <pathelement location="${testreportparserplugintests.testoutput.dir}"/>
        <path refid="library.junit.classpath"/>
        <path refid="library.jmock.classpath"/>
        <path refid="library.log4j.classpath"/>
    </path>


    <patternset id="excluded.from.module.testreportparserplugin">
        <patternset refid="ignored.files"/>
    </patternset>

    <patternset id="excluded.from.compilation.testreportparserplugin">
        <patternset refid="excluded.from.module.testreportparserplugin"/>
    </patternset>


    <target name="compile.module.testreportparserplugin"
            depends="compile.module.testreportparserplugin.production,compile.module.testreportparserplugin.tests"
            description="Compile module TestReportParserPlugin"/>

    <target name="compile.module.testreportparserplugin.production"
            depends="compile.module.testreportparserpluginagent,compile.module.testreportparserpluginserver,compile.module.testreportparserplugintests,compile.module.testreportparserplugincommon"
            description="Compile module TestReportParserPlugin; production classes"/>

    <target name="compile.module.testreportparserplugin.tests"
            depends="compile.module.testreportparserplugin.production"
            description="compile module TestReportParserPlugin; test classes" unless="skip.tests"/>

    <target name="clean.module.testreportparserplugin" description="cleanup module">
        <delete dir="${testreportparserplugin.output.dir}"/>
        <delete dir="${testreportparserplugin.testoutput.dir}"/>
    </target>
</project>