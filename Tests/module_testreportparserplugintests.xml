<?xml version="1.0" encoding="ISO-8859-1"?>
<project name="module_testreportparserplugintests" default="compile.module.testreportparserplugintests">
    <dirname property="module.testreportparserplugintests.basedir"
             file="${ant.file.module_testreportparserplugintests}"/>


    <property name="compiler.args.testreportparserplugintests" value="${compiler.args}"/>

    <property name="testreportparserplugintests.output.dir"
              value="${module.testreportparserplugintests.basedir}/../out/production/TestReportParserPluginTests"/>
    <property name="testreportparserplugintests.testoutput.dir"
              value="${module.testreportparserplugintests.basedir}/../out/test/TestReportParserPluginTests"/>

    <path id="testreportparserplugintests.module.bootclasspath">
        <!-- Paths to be included in compilation bootclasspath -->
    </path>

    <path id="testreportparserplugintests.module.classpath">
        <pathelement location="${testreportparserpluginagent.output.dir}"/>
        <pathelement location="${testreportparserpluginagent.testoutput.dir}"/>
        <pathelement location="${testreportparserpluginserver.output.dir}"/>
        <pathelement location="${testreportparserpluginserver.testoutput.dir}"/>
        <path refid="library.junit.classpath"/>
        <path refid="library.jmock.classpath"/>
        <path refid="library.teamcity_api.classpath"/>
        <path refid="library.teamcity_openapi.classpath"/>
        <pathelement location="${testreportparserplugincommon.output.dir}"/>
        <pathelement location="${testreportparserplugincommon.testoutput.dir}"/>
        <path refid="library.log4j.classpath"/>
        <path refid="library.teamcity_utils.classpath"/>
    </path>

    <path id="testreportparserplugintests.runtime.module.classpath">
        <pathelement location="${testreportparserplugintests.output.dir}"/>
        <pathelement location="${testreportparserplugintests.testoutput.dir}"/>
        <pathelement location="${testreportparserpluginagent.output.dir}"/>
        <pathelement location="${testreportparserpluginagent.testoutput.dir}"/>
        <pathelement location="${testreportparserplugincommon.output.dir}"/>
        <pathelement location="${testreportparserplugincommon.testoutput.dir}"/>
        <path refid="library.teamcity_openapi.classpath"/>
        <path refid="library.teamcity_utils.classpath"/>
        <path refid="library.teamcity_api.classpath"/>
        <pathelement location="${testreportparserpluginserver.output.dir}"/>
        <pathelement location="${testreportparserpluginserver.testoutput.dir}"/>
        <path refid="library.junit.classpath"/>
        <path refid="library.jmock.classpath"/>
        <path refid="library.log4j.classpath"/>
    </path>


    <patternset id="excluded.from.module.testreportparserplugintests">
        <patternset refid="ignored.files"/>
    </patternset>

    <patternset id="excluded.from.compilation.testreportparserplugintests">
        <patternset refid="excluded.from.module.testreportparserplugintests"/>
    </patternset>

    <path id="testreportparserplugintests.module.test.sourcepath">
        <dirset dir="${module.testreportparserplugintests.basedir}">
            <include name="src"/>
        </dirset>
    </path>


    <target name="compile.module.testreportparserplugintests"
            depends="compile.module.testreportparserplugintests.production,compile.module.testreportparserplugintests.tests"
            description="Compile module TestReportParserPluginTests"/>

    <target name="compile.module.testreportparserplugintests.production"
            depends="compile.module.testreportparserpluginagent,compile.module.testreportparserpluginserver,compile.module.testreportparserplugincommon"
            description="Compile module TestReportParserPluginTests; production classes"/>

    <target name="compile.module.testreportparserplugintests.tests"
            depends="compile.module.testreportparserplugintests.production"
            description="compile module TestReportParserPluginTests; test classes" unless="skip.tests">
        <mkdir dir="${testreportparserplugintests.testoutput.dir}"/>
        <javac destdir="${testreportparserplugintests.testoutput.dir}" debug="${compiler.debug}"
               nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true">
            <compilerarg line="${compiler.args.testreportparserplugintests}"/>
            <classpath refid="testreportparserplugintests.module.classpath"/>
            <classpath location="${testreportparserplugintests.output.dir}"/>
            <src refid="testreportparserplugintests.module.test.sourcepath"/>
            <patternset refid="excluded.from.compilation.testreportparserplugintests"/>
        </javac>

        <copy todir="${testreportparserplugintests.testoutput.dir}">
            <fileset dir="${module.testreportparserplugintests.basedir}/src">
                <patternset refid="compiler.resources"/>
                <type type="file"/>
            </fileset>
        </copy>
    </target>

    <target name="clean.module.testreportparserplugintests" description="cleanup module">
        <delete dir="${testreportparserplugintests.output.dir}"/>
        <delete dir="${testreportparserplugintests.testoutput.dir}"/>
    </target>
</project>